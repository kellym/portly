.add-modal.reveal-modal{:id => "add-tunnel-#{token.id}" }
  %h2 Add a Tunnel
  %form{'data-action' => '/api/connectors', :method => 'post'}
    %input{:type => 'hidden', :name => 'access_id', :value => token.id}
    %label Connection String
    %input.input.connection-string{:type => 'text', :name => 'connection_string', :placeholder => 'localhost:8080'}
    %label Public Endpoint
    %select.hosting-type
      %option{value: 'local'} Use [subdomain]-#{token.user.full_domain}
      %option{value: 'remote'} Set my own CNAME record at my DNS
    .for-local
      %label Subdomain
      .inline-input
        %input.input{:type => 'text', :name => 'subdomain', :placeholder => ''}
        \-#{token.user.full_domain}
      .margin-bottom-10
        %small.mute Use an asterisk (<strong>*-#{token.user.full_domain}</strong>) to create a catch-all tunnel
    .hide.for-remote
      %label CNAME Record
      %input.input.margin-bottom-0{:type => 'text', :name => 'cname', :placeholder => ''}
      %small.mute Point your CNAME record to #{App.config.cname_domain}
    .margin-top-20
      %button.margin-bottom-0{:type => 'submit'} Create Tunnel
      %a.margin-left-10.close-reveal{:href => '#'} Cancel
