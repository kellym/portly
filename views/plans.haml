%header.padding-top-20.padding-bottom-30.margin-bottom-30
  .row
    .large-12.columns.text-center
      %h2.margin-bottom-0 Choose your plan
      %h5.margin-bottom-0 Pick the plan that best suits your needs. Change plans anytime.
- if signed_in?
  - button_text = 'Choose this plan'
  - url = '/upgrade'
- else
  - button_text = 'Sign Up'
  - url = '/signup'
.content-area
  .plans
    .row.free
      .large-3.columns.icon
      .large-6.columns
        %h3 Free
        %p
          Great for students, casual testing, and product evaluation.
        %ul
          %li 15-minute sessions
          %li 1 open port
      .large-3.columns.text-center
        %a.big.button.margin-top-35.margin-bottom-0{:href => "#{url}?plan=free"}= button_text
        .weak.big $0/month
    .row.pro
      .large-3.columns.icon
      .large-6.columns
        %h3 Pro
        %p
          Perfect for designers, developers, and freelancers who want to test on mobile or get feedback from clients.
        %ul
          %li Auto-reconnecting sessions
          %li Unlimited open ports
          %li SSL support
          %li Typekit library
          %li Password-protected sites
      .large-3.columns.text-center
        %a.big.button.margin-top-50.margin-bottom-0{:href => "#{url}?plan=pro"}= button_text
        .weak.big $4.99/month
    .row.elite
      .large-3.columns.icon
      .large-6.columns
        %h3 Unlimited
        %p
          Designed for users who need more robust forwarding and who want to install Portly on multiple computers.
        %ul
          %li Pro features +
          %li Unlimited installs
          %li Raw port forwarding
      .large-3.columns.text-center
        %a.big.button.margin-top-50.margin-bottom-0{:href => "#{url}?plan=elite"}= button_text
        .weak.big $9.99/month
