%header#main
  .row
    .large-4.columns
      %h1.logo.margin-top-30.margin-bottom-40
        %a{:href => '/'} Portly
    .large-8.columns
      %ul.front-page-nav
        %li= nav_link_to 'Pricing', '/pricing'
        %li= nav_link_to 'Support', '/support'
        - if signed_in?
          %li= nav_link_to 'Sign Out', '/signout', class: 'button'
        - else
          %li= nav_link_to 'Sign In', '#!/signin', class: 'button signin-button', 'data-dropdown' => 'signin'
      - unless signed_in?
        #signin.f-dropdown
          %form{:action => '/signin', :method => 'post'}
            .row.collapse.margin-bottom-5
              %input.email{:name => 'user[email]', :type => 'text', :placeholder => 'Email Address'}
            .row.collapse
              .large-9.columns
                %input.password{:name => 'user[password]', :type => 'password', :placeholder => 'Password'}
              .large-3.columns
                %button.ss-navigateright.prefix{:type => 'submit'}
